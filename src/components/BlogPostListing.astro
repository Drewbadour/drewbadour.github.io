---
import { Image } from 'astro:assets';

const { url, iconPath, frontmatter } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/blog_icons/*.{jpeg,jpg,png,gif}');
if (!images[iconPath]) throw new Error(`"${iconPath}" does not exist in glob: "src/assets/blog_icons/*.{jpeg,jpg,png,gif}"`);

const options = { year: 'numeric', month: 'long', day: 'numeric' };
const pubDate = new Date(frontmatter.pubDate);
const formattedDate = pubDate.toLocaleDateString(undefined, options);
---

<a href={url}>
	<article>
		<div class="article-image">
			<Image src={iconPath} alt="{frontmatter.icon.alt}" width=512 height=512/>
		</div>
		<div class="article-text">
			<p class="article-date text-dark">{formattedDate}</p>
			<h2 class="article-title">{frontmatter.title}</h2>
			<p class="article-description text-dark">{frontmatter.description}</p>
		</div>
	</article>
</a>


<style>

a {
	text-decoration: none;
}

article {
	display: grid;
	grid-template-rows: 1fr auto;

	cursor: pointer;

	position: relative;

	border-radius: 7px;

	margin: 1rem 0 2rem 0;
	padding: 0.5rem;
}

article:hover .text-dark {
	color: var(--accentColor);
}

article::before {
	content: "";

	position: absolute;
	top: 0;
	left: 0;
	z-index: -1;

	width: 100%;
	height: 100%;

	background-color: var(--backgroundColorAlt);

	border-radius: 7px;

	opacity: 0;

	transition: opacity 250ms ease-out;
}

article:hover::before {
	opacity: 1;
}

.article-image {
	max-width: 100%;
	max-height: 10rem;

	overflow: hidden;

	border-radius: 7px;
}

.article-image img {
	object-fit: cover;

	width: 100%;
	height: auto;
	max-width: 100%;
}

.article-date {
	margin-top: 0.5rem;
	margin-bottom: 0.5rem;
}

.article-title {
	margin-top: 0.5rem;
	margin-bottom: 0.5rem;
}

.article-description {
	margin-top: 0.5rem;
	margin-bottom: 0.5rem;
}


/* Tablet Styling */
@media only screen and (min-width: 768px) {
	article {
		grid-template-columns: minmax(0, 2fr) minmax(0, 3fr);
		column-gap: 1rem;

		margin: 1rem 0;

		height: 12rem;
	}

	.article-image {
		max-height: 100%;
	}

	.article-image img {
		height: 100%;
	}

	.article-date {
		margin-top: 0;
	}
}


</style>