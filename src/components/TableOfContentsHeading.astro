---
const { heading } = Astro.props;
---

<li>
	<a href={'#' + heading.slug}>
		{heading.text}
	</a>
	{
		heading.subheadings.length > 0 && (
			<ul>
				{heading.subheadings.map((subheading) => (
					<Astro.self heading={subheading} />
				))}
			</ul>
		)
	}
</li>


<style>

ul {
	list-style-type: none;
	padding-inline-start: 1.5rem;
}


li {
	padding-top: 0.4rem;
}

</style>