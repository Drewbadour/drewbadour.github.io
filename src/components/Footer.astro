---
const { socials } = Astro.props;
---

<footer>
	<div class="footer-content">
		<div class="footer-column footer-thanks">
			<h4>Thanks for stopping by!</h4>
			<p>© 2024—Present, Drew Mills. All Rights Reserved.</p>
		</div>

		<div class="footer-column">
			<h4>Sitemap</h4>
			<ul class="ul-no-style">
				<li><a href="/">Home</a></li>
				<li><a href="/about">About</a></li>
			</ul>
		</div>

		<div class="footer-column">
			<h4>Socials</h4>
			<ul class="ul-no-style">
			{ socials && socials.map((social) =>
				<li><a href={social.url}>{social.name}</a></li>
			)}
			</ul>
		</div>
	</div>
</footer>


<style>

footer {
	background-color: var(--backgroundColorAlt);

/*	padding: 1rem;*/
}

.footer-content {
	display: grid;
	grid-template-columns: auto auto;

	max-width: 100%;
}

.footer-thanks {
	grid-column: span 2;
}

.footer-column {
	margin: 1rem;
}

.footer-column h4 {
	margin-top: 0;
}

/* Tablet Styling */
@media only screen and (min-width: 768px) {
	.footer-content {
		grid-template-columns: 1fr auto auto;
	}

	.footer-thanks {
		grid-column: span 1;
	}

	.footer-column {
		margin: 1rem 3rem;
	}
}

/* Desktop Styling */
@media only screen and (min-width: 1366px) {
}

</style>