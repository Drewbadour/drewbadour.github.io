<style>

nav {
	width: 100%;
	box-sizing: border-box;

/*	position: sticky;*/
	position: relative;
	top: 0;

	display: flex;

	margin: 0;
	padding: 1rem;

	color: white;
}

a {
	margin: auto 1rem;
/*	padding: auto 1rem;*/

	text-transform: uppercase;

	color: white;
	text-decoration-color: var(--gold);

	transition: color 150ms ease-out;
}

a:hover {
	color: var(--gold);
}

.test {
	border-radius: 50%;

	background-color: white;
	mix-blend-mode: difference;
/*	filter: invert(100%);*/

	transition: padding 150ms ease-out;
}

a:hover .test {
	padding: 0.5rem;
/*	width: 3.25rem;*/
/*	height: 3.25rem;*/
}

.nav-section {
	display: flex;

	align-items: center;
	justify-content: flex-end;
}

#nav-logo-section {
	justify-content: flex-start;
	flex-basis: 100%;
}

#nav-social-section {
	margin: 0 1rem;
}

#nav-link-section {
	color: white;
}

