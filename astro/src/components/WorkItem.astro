---
interface Props {
	text: string;
	href: string;
}

const { text, href } = Astro.props;
---

<a class="passive-wrapper link" href={href}>
	<div class="passive-shell resistor-shell">
		<div class="passive-body resistor-body">
			<span class="text">{text}</span>
			<i class="fa fa-fw fa-external-link" aria-hidden="true"/>
		</div>
	</div>
</a>

